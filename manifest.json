{
  "manifest_version": 3,
  "name": "Seenit! - Episode Tracker",
  "description": "Keep track of your favorite series and episodes with a simple, cozy interface. Works offline and supports dark/light themes.",
  "version": "1.0.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "seenit@seenitapp.org",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.tvmaze.com/*",
    "https://kofi.seenitapp.org/*"
  ],
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_title": "Seenit! - Episode Tracker",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
