{
  "name": "seenit-episode-tracker",
  "version": "1.0.2",
  "description": "The chrome and firefox extension to keep track of your favorite series and episodes with a simple, cozy interface. Works offline and supports dark/light themes. Implemented with Vite, React, Zustand, TypeScript and Tailwind CSS.",
  "license": "Source-Available, Non-Commercial License (Proprietary)",
  "repository": {
    "type": "git",
    "url": "https://github.com/farengeyt451/seenit-extension"
  },
  "scripts": {
    "build": "vite build --config vite.config.chrome.ts",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:chrome:prod": "nodemon --config nodemon.chrome.json -- --mode production",
    "dev:firefox": "nodemon --config nodemon.firefox.json"
  },
  "type": "module",
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "immer": "^11.1.0",
    "luxon": "^3.7.2",
    "react-dom": "^19.2.3",
    "react-rewards": "^2.1.0",
    "react": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chrome": "^0.1.32",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.3",
    "@types/react-dom": "^19.2.3",
    "@types/react": "^19.2.7",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-react": "^7.37.5",
    "eslint": "^9.39.2",
    "fs-extra": "^11.3.3",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.50.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vite": "^7.3.0"
  }
}
