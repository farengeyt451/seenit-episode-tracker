{
  "name": "seenit-episode-tracker",
  "version": "1.0.0",
  "description": "The chrome & firefox extension to keep track of your favorite series and episodes with a simple, cozy interface. Works offline and supports dark/light themes. Implemented with Vite, React, Zustand, TypeScript and Tailwind CSS.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/farengeyt451/seenit-extension"
  },
  "scripts": {
    "build": "vite build --config vite.config.chrome.ts",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:chrome:prod": "nodemon --config nodemon.chrome.json -- --mode production",
    "dev:firefox": "nodemon --config nodemon.firefox.json"
  },
  "type": "module",
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.16",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "immer": "^10.2.0",
    "luxon": "^3.7.2",
    "react-dom": "^19.2.0",
    "react-rewards": "^2.1.0",
    "react": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.16",
    "@types/chrome": "^0.1.27",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.0",
    "@types/react-dom": "^19.2.2",
    "@types/react": "^19.2.2",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-react": "^7.37.5",
    "eslint": "^9.39.1",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "nodemon": "^3.1.10",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.46.3",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vite": "^7.1.12"
  }
}
